<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <!--
    The jar file generated by this assembly descriptor will contain the precompiled libraries,
    but with the library replaced from the current cmake build.
  -->
  <id>${maven.assembly.id}</id>

  <formats>
    <format>jar</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <unpack>true</unpack>
      <scope>compile</scope>
      <includes>
        <include>${project.groupId}:${project.artifactId}</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${cmake.generated.directory}/natives</directory>
      <outputDirectory>natives</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
